<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 30; -fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0.5, 0, 0); -fx-font-family: 'Arial';"
      fx:controller="com.example.voteapp.controllers.EditPollController">

    <!-- Nagłówek -->
    <Label text="Edytuj Ankietę"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>

    <!-- Form Fields -->
    <VBox spacing="20" style="-fx-pref-width: 700; -fx-alignment: CENTER;">
        <!-- Pole: Nazwa Ankiety -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Nazwa Ankiety:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
            <TextField fx:id="pollNameField" promptText="Wprowadź nazwę ankiety"
                       style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 8;" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Pole: Data Rozpoczęcia -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Data Rozpoczęcia:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
            <TextField fx:id="startDateField" promptText="YYYY-MM-DD HH:mm"
                       style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 8;" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Pole: Data Zakończenia -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Data Zakończenia:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
            <TextField fx:id="endDateField" promptText="YYYY-MM-DD HH:mm"
                       style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 8;" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Pole: Województwo -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Województwo:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
            <TextField fx:id="voivodeshipField" promptText="Opcjonalne"
                       style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 8;" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Pole: Gmina -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Gmina:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
            <TextField fx:id="municipalityField" promptText="Opcjonalne"
                       style="-fx-background-color: #F5F5F5; -fx-background-radius: 10; -fx-padding: 8;" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 25;">
        <Button text="Zapisz" onAction="#saveChanges"
                style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12 25;"/>
        <Button text="Anuluj" onAction="#closeWindow"
                style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12 25;"/>
    </HBox>
</VBox>
