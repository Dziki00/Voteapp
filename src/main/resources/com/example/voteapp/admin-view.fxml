<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 20; -fx-background-color: white; -fx-font-family: 'Arial';" fx:controller="com.example.voteapp.controllers.AdminController">

    <!-- Przyciski nawigacji u góry -->
    <VBox spacing="10" alignment="CENTER"
          style="-fx-padding: 20; -fx-background-color: #E8F5E9; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0); -fx-pref-width: 600;">

        <!-- Nagłówek i przycisk wylogowania -->
        <HBox spacing="20" alignment="CENTER">
            <Label text="Panel Administratora" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        </HBox>

        <!-- Przycisk Utwórz Ankietę -->
        <Button text="Utwórz Ankietę" fx:id="createPollButton"
                style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #43A047; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10;"/>
    </VBox>

    <!-- Obszar na ankiety -->
    <ScrollPane fx:id="pollsScrollPane" fitToWidth="true" style="-fx-padding: 10; -fx-background-color: transparent;">
        <VBox fx:id="pollsContainer" spacing="20" alignment="CENTER"
              style="-fx-padding: 20; -fx-background-color: #E8F5E9; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0); -fx-min-width: 600;">
            <Label text="Lista Ankiet" style="-fx-font-size: 20px; -fx-text-fill: #333333;"/>
        </VBox>
    </ScrollPane>

    <Button text="Wyloguj" fx:id="logoutButton"
            style="-fx-font-size: 14px; -fx-padding: 5 15; -fx-background-color: #E53935; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10;"/>

</VBox>
