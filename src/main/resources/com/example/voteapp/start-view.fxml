<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.voteapp.StartController"
      style="-fx-padding: 20; -fx-background-color: #E8F5E9; -fx-font-family: 'Arial';">

    <!-- Logo Aplikacji -->
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
        <ImageView fx:id="logoImage" fitWidth="200" fitHeight="200"
                   style="-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0); -fx-border-color: white; -fx-border-width: 5; -fx-border-radius: 10;"/>
        <Label text="VoteSmart" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #43A047;"/>
    </VBox>

    <!-- Pole do wpisania PESELu i hasła -->
    <TextField fx:id="peselField" promptText="PESEL"
               style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-max-width: 300;"/>
    <PasswordField fx:id="passwordField" promptText="Hasło"
                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-max-width: 300;"/>

    <!-- Przyciski -->
    <Button text="Zaloguj" fx:id="loginButton"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #FF5722; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 250;"/>
    <Button text="Zarejestruj obywatela" fx:id="registerButton"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #43A047; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 250;"/>
</VBox>
