<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>


<VBox spacing="15" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.voteapp.controllers.RegisterController"
      style="-fx-padding: 20; -fx-background-color: #E8F5E9; -fx-font-family: 'Arial';">

    <!-- Logo w lewym górnym rogu -->
    <HBox alignment="TOP_LEFT" style="-fx-padding: 0 0 10 0;">
        <ImageView fx:id="logoSmall" fitWidth="50" fitHeight="50"
                   style="-fx-effect: dropshadow(gaussian, black, 5, 0.3, 0, 0); -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5;"/>
    </HBox>

    <!-- Pola rejestracji -->
    <TextField fx:id="peselField" promptText="PESEL"
               style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>
    <TextField fx:id="emailField" promptText="Email"
               style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>
    <PasswordField fx:id="passwordField" promptText="Hasło"
                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>
    <PasswordField fx:id="repeatPasswordField" promptText="Powtórz hasło"
                   style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>
    <TextField fx:id="addressField" promptText="Adres zameldowania"
               style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>

    <!-- Data urodzenia -->
    <TextField fx:id="birthYearDate" promptText="Data urodzenia"
                style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-pref-width: 1200;"/>

    <!-- Województwo -->
    <ComboBox fx:id="voivodeshipComboBox" promptText="Województwo"
              style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-pref-width: 1200;"/>

    <!-- Gmina/Powiat -->
    <TextField fx:id="municipalityField" promptText="Gmina/Powiat"
               style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5;"/>

    <!-- Przyciski -->
    <Button text="Zarejestruj" fx:id="registerButton"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #43A047; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 250;"/>
    <Button text="Powrót" fx:id="backButton"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #1E88E5; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-pref-width: 250;"/>
</VBox>
